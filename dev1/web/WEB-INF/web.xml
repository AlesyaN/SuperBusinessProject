<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Currencies</servlet-name>
        <servlet-class>servlets.CurrenciesServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>Stocks</servlet-name>
        <servlet-class>servlets.StocksServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>News</servlet-name>
        <servlet-class>servlets.NewsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Analysis</servlet-name>
        <servlet-class>servlets.AnalysisServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Crypto</servlet-name>
        <servlet-class>servlets.CryptoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>servlets.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Edit</servlet-name>
        <servlet-class>servlets.EditProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Ajax</servlet-name>
        <servlet-class>servlets.AjaxServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NewPost</servlet-name>
        <servlet-class>servlets.NewPostServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewPost</servlet-name>
        <url-pattern>/new-post/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Ajax</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Edit</servlet-name>
        <url-pattern>/edit-profile/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/sign-up/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Crypto</servlet-name>
        <url-pattern>/crypto/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Analysis</servlet-name>
        <url-pattern>/analysis/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>News</servlet-name>
        <url-pattern>/news/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Stocks</servlet-name>
        <url-pattern>/stocks/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Currencies</servlet-name>
        <url-pattern>/currencies/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
</web-app>